<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/forgot_id_layout"
    tools:context="com.example.saksham.amc_app.forgot_id">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91"
        android:layout_toLeftOf="@+id/mobile"
        android:layout_above="@+id/get_id_button"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile Number"
        android:id="@+id/mobile"
        android:layout_above="@+id/get_id_button"
        android:layout_centerHorizontal="true"
        android:maxLength="10"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Id"
        android:id="@+id/get_id_button"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_id_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_result"
        android:textColor="#FF0000"/>

</RelativeLayout>
