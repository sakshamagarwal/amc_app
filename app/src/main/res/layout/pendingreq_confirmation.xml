<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView 
        android:id="@+id/req_info"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="req info here"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    
    <Button 
        android:id="@+id/reject"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="REJECT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/req_info"/>
    
    <Spinner 
         android:id="@+id/select_eng"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/reject"/>
    
    <Button 
        android:id="@+id/send_eng"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/select_eng"	
        android:text="SEND ENGINEER"/>

</RelativeLayout>
