<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.saksham.amc_app.customer_login"
    android:focusableInTouchMode="true"
    android:id="@+id/login_layout">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/customer_uid"
        android:src="@drawable/logo"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:hint="YOUR UNIQUE ID"
        android:inputType="number"
        android:id="@+id/customer_uid"
        android:maxLength="5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0000"
        android:layout_below="@+id/login_submit"
        android:layout_centerHorizontal="true"
        android:id="@+id/error_msg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_submit"
        android:layout_below="@+id/customer_uid"
        android:background="#8bc34a"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't know your id?"
        android:textColor="#0000FF"
        android:textStyle="italic"
        android:id="@+id/lost_id"
        android:layout_below="@id/error_msg"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
